<div class="card-horizontal mt-sm">
  <% if cohemp.photos.attached? %>
    <%= cl_image_tag cohemp.photo.key , height: 300, width: 400, crop: :fill, class: "image" %>
  <% else %>
    <img src="https://source.unsplash.com/285x220/?building" alt="" class="cloudinary">
  <% end %>
  <div class="card-horizontal__container">
    <h2 class="title-2 mt-sm">
      <% if cohemp.name.nil? %>
        Cohemp em SÃ£o Paulo
      <% else  %>
        <%= cohemp.name %>
      <% end  %>
    </h2>
    <span class="separator separator--small"></span>
    <ul class="feature-list mt-sm">
      <li class="list-item">Da boa</li>
      <li class="list-item">Acompanha cerveja artesanal</li>
    </ul>
    <%= link_to cohemp_path(cohemp) do%>
      <%= render partial: "shared/button", locals: {
        variant: "btn-green mt-sm",
        title: "Reservar",
      } %>
    <% end %>
  </div>
</div>