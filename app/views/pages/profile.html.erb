<h1>Profile Page</h1>

<p>  Hello <%= @user.email %>!  </p>
<p>Your Co-Hemps:</p>
<ul class="list-group">
    <% @cohemps.each do |cohemp| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to cohemp.description, cohemp_path(cohemp) %>
      </li>
    <% end %>
<p><%= link_to '+ Add Co-Hemp', new_cohemp_path %></p>
<p>Your Bookings:</p>
<ul class="list-group">
    <% @bookings.each do |booking| %>
      <% if booking.status == 'solicited' || booking.status == 'approved'%>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= booking.date%> |
          <%= booking.cohemp.description %> |
          <%= booking.status%>
          <%= link_to 'Cancel this booking', booking_cancel_path(booking.id), method: :patch %>
        </li>
      <% end %>
    <% end %>
<p>Reservations to your Co-Hemps:</p>
<ul class="list-group">
    <% @reservations.each do |reservation| %>
      <% if reservation.status == 'solicited' || reservation.status == 'approved'%>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= reservation.date%> |
          <%= reservation.cohemp.description %> |
          <%= reservation.status%>
          <%= link_to 'Accept this booking', booking_approve_path(reservation.id), method: :patch %>
        </li>
      <% end %>
    <% end %>
